{
	"bunli": {
		"entry": "./src/index.ts",
		"outDir": "./dist"
	},
	"bin": {
		"zap-format": "./dist/index.js"
	},
	"description": "A brand new Bun CLI!",
	"name": "@roblox-tooling/zap-format",
	"module": "src/index.ts",
	"type": "module",
	"engines": {
		"bun": ">=1.1.38"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@bunli/test": "latest",
		"@eslint-react/eslint-plugin": "^1.48.4",
		"@eslint/config-inspector": "^1.1.0",
		"@isentinel/eslint-config": "^1.2.3",
		"@mitata/counters": "^0.0.8",
		"@types/bun": "latest",
		"bunli": "latest",
		"eslint": "^9.25.1",
		"eslint-config-biome": "^1.9.4",
		"eslint-plugin-react-roblox-hooks": "^5.1.0-rbx.1",
		"jiti": "^2.4.2",
		"knip": "^5.62.0",
		"mitata": "^1.0.34"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@bunli/core": "latest",
		"@octokit/rest": "^22.0.0",
		"chalk": "^5.4.1",
		"env-paths": "^3.0.0",
		"rimraf": "^6.0.1",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^4.0.5",
		"zod-validation-error": "^4.0.0-beta.2"
	},
	"scripts": {
		"build:executable": "bun build ./dist --compile --production --target=bun --outfile=zap-format --minify --sourcemap",
		"build": "bunli build",
		"create-release": "bun run ./scripts/create-release.ts",
		"dev": "bun --hot run src/index.ts",
		"knip": "knip",
		"lint:biome": "bun x --bun biome ci",
		"lint:eslint": "bun x eslint --max-warnings 0 ./src",
		"lint:fix": "bun run lint --fix",
		"lint:tsc": "bun x tsc --noEmit --incremental",
		"lint": "bun run ./scripts/lint.ts",
		"test:watch": "bun test --watch",
		"test": "bun test --coverage",
		"type-check": "bun x tsc --noEmit --incremental"
	},
	"version": "0.1.0",
	"author": {
		"name": "HowManySmall"
	},
	"homepage": "https://github.com/howmanysmall/zap-format#readme",
	"bugs": {
		"url": "https://github.com/howmanysmall/zap-format/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/howmanysmall/zap-format.git"
	},
	"license": "MIT",
	"main": "src/index.ts"
}
